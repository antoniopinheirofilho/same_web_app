{
  "name": "nexus-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:init": "tsx scripts/db-init.ts",
    "db:reset": "tsx scripts/db-init.ts --reset",
    "db:check": "tsx scripts/db-init.ts --check"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "tsx": "^4.7.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
